<div class="container"> 
 
 
  <div class="row">
    <div class="col-md-4">
      <%= link_to root_path do %>
        <%=image_tag("eagleforcefoundationlogo.png",  {:style => "width:35%;"}) %>
      <%end%>
    </div>
       
      
    <div class="col-md-8 text-right">
       <br/>
      <i class="fa fa-user fa-lg usericon"></i>  

      <span class="useremail"><%= current_user.email %></span>

      <%= link_to "logout", destroy_user_session_path, class: "btn snazzybtn snazzybtn-five-sm",method: :delete %>
    </div>
  </div>

  <br/>

  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to 'New Donor', new_donor_path, class: "btn animatedbutton animatedbutton5" %>
    </div>
  </div>

  <br/>

  <!-- <p id="notice"><%= notice %></p> -->
  <div class="row">
    <div class="col-md-4 text-center">
      <!-- search form -->
      
            
        <%= form_tag(donors_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "ID/Name" ,class: "searchinput"%>

          <%#= submit_tag "Search",:class => "btn btn-success" %>
          <%= button_tag(type: "submit", class: "btn transparent_button") do %>
              <i class="fa fa-lg fa-search searchicon"></i>
          <% end %>
        
        <% end %>
          
        
     
      <!-- !search form -->
    </div>

    <div class="col-md-4 text-center">
      <!-- search form -->
      
            
        <%= form_tag(donors_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :donationgoal,  params[:donationgoal], placeholder: "Donation Goal >" ,class: "searchinput"%>

          <%#= submit_tag "Search",:class => "btn btn-success" %>
          <%= button_tag(type: "submit", class: "btn transparent_button") do %>
              <i class="fa fa-lg fa-search searchicon"></i>
          <% end %>
        
        <% end %>
          
        
     
      <!-- !search form -->
    </div>

    <div class="col-md-4 text-center">
      <!-- search form -->
      
            
        <%= form_tag(donors_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :donationytd,  params[:donationytd], placeholder: "Donation YTD >" ,class: "searchinput"%>

          <%#= submit_tag "Search",:class => "btn btn-success" %>
          <%= button_tag(type: "submit", class: "btn transparent_button") do %>
              <i class="fa fa-lg fa-search searchicon"></i>
          <% end %>
        
        <% end %>
          
        
     
      <!-- !search form -->
    </div>



  </div>
  <br/>
  <br/>

  <div class="listingdonors">
    <h2>Listing Donors</h2>
  </div>
  <%=paginate @donors %>
  <br/>

  <div class="row">
    <% @donors.each do |donor| %>
    
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
          <%=link_to donor do%>             
             <%=image_tag donor.image.url(:small) %>
             <%end%>
          </div>
            <div class="card-body">
              <p class="card-text">
              <strong>ID:</strong>
              <%= donor.id %>
              </p>
              <p class="card-text">
              <strong>Name:</strong>
              <%= donor.name %>
              </p>
              <p class="card-text">
              <strong>Donation Goal:</strong>
              <%= donor.donation_goal %>
              </p>
              <p class="card-text">
                <strong>Donation YTD:</strong>
                <%= donor.donation_YTD %>
              </p>
            </div>
          </div>
          <div class="card-footer text-center"> 
            <%= link_to 'View', donor , class: "btn snazzybtn-one-sm-blue " %></td>
            <%= link_to 'Edit', edit_donor_path(donor), class: "btn snazzybtn-one-sm-orange"%></td>
            <%= link_to 'Delete', donor, class: "btn snazzybtn-one-sm-red" , method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          <br/>
      </div>    
      <% end %>

    </div>
    <%=paginate @donors %>



