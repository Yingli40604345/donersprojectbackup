<div class="container">
	<h1>Editing Relationship</h1>
	<div class="row">
	<div class="col-md-6 text-center">

	<%= render 'form' %>
</div>




 	<div class="col-md-6 text-center">
      <!-- search form -->
      
            
        <%= form_tag(searchdoner_path, :method => "get", remote: true) do %>
          <%= text_field_tag :donerid,  params[:donerid], placeholder: "Please Enter Doner ID" ,class: "searchinput"%>

          <%#= submit_tag "Search",:class => "btn btn-success" %>
          <%= button_tag(type: "submit", class: "btn transparent_button", id: "searchdonerbtn") do %>
              <i class="fa fa-lg fa-search searchicon"></i>
          <% end %>
        
        <% end %>
          
        
     
      <!-- !search form -->
    </div>


    <div id="relationshipsearchresults">
      
    </div>
</div>



	<%= link_to 'Show', @relationship, class: "btn btn-info" %> 
	<%= link_to 'Back', relationships_path, class: "btn btn-warning" %>




</div>
<script>
$('#searchdonerbtn').click(function(params) {

  var donorId = $('#donerid').val();

  $.ajax({url: '/doners/' + donorId}).done(function(response){
    $('#relationshipsearchresults').html(response);
    console.log(response);
  });
    

   });
</script>